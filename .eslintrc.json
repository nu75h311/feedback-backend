{
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "extends": [
    "airbnb-typescript",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "__tests__/integration/**/*.test.[jt]s?(x)",
          "__tests__/controllers/**/*.test.[jt]s?(x)"
        ]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "should"
      }
    ]
  }
}